{
    "$schema": "http://json-schema.org/draft-06/schema",
    "type": "object",
    "required": [
        "books"
    ],
    "properties": {
        "books": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "isbn",
                            "title",
                            "subTitle",
                            "author",
                            "publish_date",
                            "publisher",
                            "pages",
                            "description",
                            "website"
                        ],
                        "properties": {
                            "isbn": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "subTitle": {
                                "type": "string"
                            },
                            "author": {
                                "type": "string"
                            },
                            "publish_date": {
                                "type": "date"
                            },
                            "publisher": {
                                "type": "string"
                            },
                            "pages": {
                                "type": "number"
                            },
                            "description": {
                                "type": "string"
                            },
                            "website": {
                                "type": "string"
                            }
                        }
                    }
                ]
            }
        }
    }
}